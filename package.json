{
	"name": "new-storybook-twig-folder",
	"displayName": "New Storybook Twig Folder",
	"description": "Create a twig, css, and stories.js file with the same name of a new folder",
	"version": "2.0.0",
	"publisher": "baerkins",
	"keywords": [
		"storybook",
		"create file"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/baerkins/vscode-storybook-twig-folder"
	},
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
  "activationEvents": [],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "New Storybook HTML Folder",
			"properties": {
				"newStorybookHtmlFolder.OrganizeComponents": {
					"type": "boolean",
					"default": true,
          "order": 1,
					"description": "If checked, Story titles will automatically include their parent folder names as categories."
				},
        "newStorybookHtmlFolder.OrganizeFromParentDirectoryName": {
					"type": "string",
					"default": "",
					"order": 2,
					"description": "Comma seperated list of parent folders that create category groups in the Storybook sidebar. Will autogenerate a title in stories file based on folder organization for folders created within these directory."
				},
				"newStorybookHtmlFolder.OmitParentFolderFromTitle": {
					"type": "boolean",
					"default": true,
          "order": 3,
					"description": "If checked, the parent folder name from 'Organcize From Parent Directory Name' will be omitted from the story title."
				},
				"newStorybookHtmlFolder.addStoriesJS": {
					"type": "boolean",
					"default": true,
          "order": 4,
					"description": "Add .stories.js file"
				},
        "newStorybookHtmlFolder.addStoriesTS": {
					"type": "boolean",
					"default": false,
          "order": 5,
					"description": "Add .stories.ts file"
				},
				"newStorybookHtmlFolder.addTwigFile": {
					"type": "boolean",
					"default": true,
          "order": 6,
					"description": "Add twig file"
				},
				"newStorybookHtmlFolder.addHtmlFile": {
					"type": "boolean",
					"default": false,
          "order": 7,
					"description": "Add html file"
				},
				"newStorybookHtmlFolder.addCssFile": {
					"type": "boolean",
					"default": true,
          "order": 8,
					"description": "Add css file"
				},
        "newStorybookHtmlFolder.addJsFile": {
					"type": "boolean",
					"default": true,
          "order": 9,
					"description": "Add js file"
				},
        "newStorybookHtmlFolder.addPcssFile": {
					"type": "boolean",
					"default": false,
          "order": 10,
					"description": "Add pcss file"
				},
        "newStorybookHtmlFolder.addSassFile": {
					"type": "boolean",
					"default": false,
          "order": 11,
					"description": "Add sass file"
				},
        "newStorybookHtmlFolder.addScssFile": {
					"type": "boolean",
					"default": false,
          "order": 12,
					"description": "Add scss file"
				},
				"newStorybookHtmlFolder.ComponentImportSuffix": {
					"type": "string",
					"default": "Template",
					"description": "Suffix for storybook import name",
					"order": 13
				},
				"newStorybookHtmlFolder.ImportEngine": {
					"type": "string",
					"default": "@storybook/html-vite",
					"description": "If generating typescript stories, this value will be used to generate the import statement for Storybook's Meta and StoryObj types.",
					"order": 14
				}
			}
		},
		"commands": [
			{
				"command": "createStorybookHtmlFolder",
				"title": "Create New Storybook HTML Folder"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "createStorybookHtmlFolder",
					"group": "1_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
	}
}
